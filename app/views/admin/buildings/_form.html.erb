<%= error_summary @building %>

<fieldset class="govuk-fieldset">
  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    Address information
  </legend>

  <%= render "govuk/text_field", form: form, model: @building, attribute: :uprn %>
  <%= render "govuk/text_field", form: form, model: @building, attribute: :building_name %>
  <%= render "govuk/text_field", form: form, model: @building, attribute: :street %>
  <%= render "govuk/text_field", form: form, model: @building, attribute: :city_town %>
  <%= render "govuk/text_field", form: form, model: @building, attribute: :postcode, input_class: "govuk-!-width-one-half" %>
</fieldset>

<fieldset class="govuk-fieldset">
  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    Proprietor information
  </legend>

  <%= render "govuk/text_field", form: form, model: @building, attribute: :land_registry_proprietor_name %>
  <%= render "govuk/text_field", form: form, model: @building, attribute: :proprietor_email %>
  <%= render "govuk/text_field", form: form, model: @building, attribute: :land_registry_proprietor_address %>
</fieldset>
