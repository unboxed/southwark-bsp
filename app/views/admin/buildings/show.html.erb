<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= @building.address %></h1>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-m">Building details</h2>
      </div>
      <div class="govuk-grid-column-one-third">
        <%= link_to "Edit building details", edit_admin_building_path(@building), class: "govuk-button govuk-button--secondary" %>
      </div>
    </div>

    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <% t(:attributes, scope: "dashboard.buildings.show").each do |attr| %>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            <%= t(attr, scope: "dashboard.buildings.show.labels") %>
          </dt>
          <dd class="govuk-summary-list__value">
            <%= @building.send(attr)&.humanize || "N/A" %>
          </dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-m">Survey details</h2>
    </div>
  </div>

  <% if @building.survey.present? %>
  <div class="govuk-grid-column-two-thirds">
    <%= render @building.survey.summaries(self) %>
  </div>
  <% end %>
</div>
