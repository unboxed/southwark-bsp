<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <details class="filters govuk-details" data-module="govuk-details" <%= @filtered ? "open=true" : ""%>>
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
          Filters
        </span>
      </summary>
      <div class="govuk-details__text">
        <div class="filters-container">
          <%= form_with method: :get do |form| %>
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-third">
                <h2 class="govuk-heading-s">EWS Survey</h2>
                <div class="govuk-checkboxes">
                  <% [:completed, :not_received].each do |sym| %>
                    <div class="govuk-checkboxes__item">
                      <%= form.check_box :state, { id: sym, class: "govuk-checkboxes__input", include_hidden: false, checked: params[:state] == sym.to_s }, sym %>
                      <%= form.label sym, class: "govuk-label govuk-checkboxes__label" %>
                    </div>
                    <% end %>
                </div>
              </div>
            </div>
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-full">
                <%= form.submit "Filter", class: "govuk-button govuk-!-margin-top-6" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </details>
  </div>
</div>
