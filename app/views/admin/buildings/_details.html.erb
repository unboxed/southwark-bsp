<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m">Building details</h2>
  </div>
  <div class="govuk-grid-column-one-third">
    <%= link_to "Edit building details", edit_admin_building_path(@building), class: "govuk-button govuk-button--secondary" %>
  </div>
</div>

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:uprn, scope: "dashboard.buildings.show.labels") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @building.uprn %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:land_registry_proprietor_name, scope: "dashboard.buildings.show.labels") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @building.land_registry_proprietor_name %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:proprietor_email, scope: "dashboard.buildings.show.labels") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @building.proprietor_email %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:land_registry_proprietor_address, scope: "dashboard.buildings.show.labels") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @building.land_registry_proprietor_address %>
    </dd>
  </div>
</dl>
