<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <details class="filters govuk-details" data-module="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
          Filter
        </span>
      </summary>
      <div class="govuk-details__text">
        <div class="filters-container">
          <%= form_with method: :get do |form| %>
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-third">
                <h2 class="govuk-heading-s">EWS Survey</h2>
                <div class="govuk-checkboxes">
                  <div class="govuk-checkboxes__item">
                    <%= form.check_box :completed, class: "govuk-checkboxes__input" %>
                    <%= form.label :completed, "Completed", class: "govuk-label govuk-checkboxes__label" %>
                  </div>
                  <div class="govuk-checkboxes__item">
                    <%= form.check_box :not_received, class: "govuk-checkboxes__input" %>
                    <%= form.label :not_received, "Not received", class: "govuk-label govuk-checkboxes__label" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-full">
                <%= form.submit "Filter", class: "govuk-button govuk-!-margin-top-6" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </details>
  </div>
</div>
