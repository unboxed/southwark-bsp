<div class="filters">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-heading-m">Filters</h2>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-third">
          <%= form_with method: :get do |form| %>
            <div class="govuk-form-group">
              <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                  <h3 class="govuk-fieldset__heading">
                    Survey state
                  </h3>
                </legend>
                <div class="govuk-radios govuk-radios--small govuk-radios--conditional" data-module="govuk-radios">
                  <% t(:"dashboard.facets").each do |state| %>
                    <div class="govuk-radios__item">
                      <%= form.radio_button :state, state, checked: state == selected_facet, class: "govuk-radios__input" %>
                      <%= form.label :state, value: state, class: "govuk-label govuk-radios__label" %>
                    </div>
                  <% end %>
                </div>
              </fieldset>
            </div>
            <%= form.submit "Filter", class: "govuk-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
