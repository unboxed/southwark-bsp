<%= render "application/back_link", chosen_path: admin_building_path(@building) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Edit building record</h1>

    <%= form_with model: [:admin, @building], local: true do |form| %>
      <%= render "form", form: form %>

      <div class="govuk-button-group">
        <%= form.submit "Update building record", class: "govuk-button", data: { module: "govuk-button" } %>
        <%= link_to "Delete building record", admin_building_path(@building), class: "govuk-button govuk-button--warning", method: :delete, data: { confirm: "Are you sure you want to delete this record?", module: "govuk-button" } %>
      </div>
    <% end %>
  </div>
</div>
