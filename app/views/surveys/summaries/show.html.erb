<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-l">Check your answers</h1>
    <table class="govuk-table">
      <h2 class="govuk-heading-m">Building details</h2>
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-half"></th>
      </tr>
    </table>
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Building details</dt>
        <dd class="govuk-summary-list__value">
          <%= @survey.building.building_name %><br>
          <%= @survey.building.street %><br>
          <%= @survey.building.city_town %><br>
          <%= @survey.building.postcode %></dd>
        <dd class="govuk-summary-list__actions">
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">UPRN</dt>
        <dd class="govuk-summary-list__value"><%= @survey.building.uprn %></dd>
        <dd class="govuk-summary-list__actions">
        </dd>
      </div>
    </dl>
    <table class="govuk-table">
      <% if @survey.completed? %>
        <h2 class="govuk-heading-m">Your answers</h2>
      <%else%>
        <h2 class="govuk-heading-m">Your answers so far</h2>
      <%end%>
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-half"></th>
      </tr>
    </table>
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <%= render @survey.sections %>
    </dl>
    <%if @finish_survey == true %>
      <%= link_to "Submit", survey_end_survey_path(@survey), class: "govuk-button", data: { module: "govuk-button" } %>
    <%else%>
      <%= link_to "Continue", survey_end_survey_path(@survey), class: "govuk-button", data: { module: "govuk-button" } %>
    <% end %>
  </div>
</div>
